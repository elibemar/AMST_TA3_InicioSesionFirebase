<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PerfilUsuario">

    <ImageView
        android:id="@+id/imv_foto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:srcCOmpat="@tools:sample/avatars"
        android:layout_gravity="center"
        />


    <TextView
        android:id="@+id/txt_userId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/txt_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nombre de Usuario"
        android:textStyle="bold"
        android:textSize="30sp"
        />


    <TextView
        android:id="@+id/txt_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="correo: "
        android:gravity="center"
        android:textSize="18sp"
        />



    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar sesion"
        android:onClick="cerrarSesion"
        />

    <Button
        android:id="@+id/btn_registrosLab4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registroLab4"
        android:onClick="registrosLab4"
        />

    <Button
        android:id="@+id/btn_registrosLab5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registroLab5"
        android:onClick="registrosLab5"
        />


</LinearLayout>